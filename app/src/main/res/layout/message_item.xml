<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ly_container_message_other_user"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="12dp"
            android:minWidth="100dp"
            android:background="@drawable/background_rounded_corner_current_other_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_message_content_other_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message Here"
                android:textColor="@color/dark_gray"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly_container_message_current_user"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="12dp"
            android:minWidth="100dp"
            android:background="@drawable/background_rounded_corner_current_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_message_content_current_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message Here"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>